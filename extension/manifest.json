{
  "manifest_version": 3,
  "name": "Record & Play Extension",
  "version": "1.0",
  "description": "Record user actions (navigate/click/type) and upload recordings to local backend.",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-loader.js"],
      "run_at": "document_start"
    }
  ]
}
